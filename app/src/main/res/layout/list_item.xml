<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recycler_card"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/recycler_fridge_image"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_image_24"
            app:shapeAppearanceOverlay="@drawable/green_border"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_fridge_title"
            android:text="Product Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/recycler_fridge_image"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_fridge_added_date"
            android:text="Added:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/recycler_fridge_image"
            android:layout_below="@id/recycler_fridge_title"
            android:layout_marginStart="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_fridge_expire_date"
            android:text="Expiry:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/recycler_fridge_image"
            android:layout_below="@id/recycler_fridge_added_date"
            android:layout_marginStart="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_fridge_reminder_date"
            android:text="Reminder:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/recycler_fridge_image"
            android:layout_below="@id/recycler_fridge_expire_date"
            android:layout_marginStart="15dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>